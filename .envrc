# direnv configuration for Context Rot Research
# Automatically activates venv and loads API keys from skate
#
# Setup: Install direnv (brew install direnv) and run `direnv allow`

# Activate virtual environment
source venv/bin/activate

# Load API keys from skate (charm.sh secure key-value store)
export OPENAI_API_KEY=$(skate get openai.key)
export OPENROUTER_API_KEY=$(skate get openrouter.key)
export ANTHROPIC_API_KEY=$(skate get anthropic.key)

# Force OpenRouter for GPT-OSS (explicit preference overrides auto-detection)
export GPT_OSS_PREFER_PROVIDER=openrouter
unset GPT_OSS_BASE_URL
